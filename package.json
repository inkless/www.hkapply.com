{
  "name": "www.hkapply.com",
  "version": "0.1.0",
  "description": "website for hkapply",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:inkless/www.hkapply.com.git"
  },
  "keywords": [
    "apply",
    "hong",
    "kong",
    "university"
  ],
  "author": "Guangda Zhang",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/inkless/www.hkapply.com/issues"
  },
  "homepage": "http://www.hkapply.com",
  "scripts": {
    "clean": "rm -f static/dist",
    "autoprefixer": "postcss -u autoprefixer -r static/dist/css/*",
    "scss": "node-sass --output-style compressed -o static/dist/css static/src/scss",
    "lint": "eslint static/src/js",
    "imagemin": "imagemin static/src/images static/dist/images -p",
    "icons": "mkdir -p static/dist/images && sprity create static/dist/images/ static/dist/images/icons/*.png -s ../../src/scss/_sprite.scss -p sass --style-type scss -d 1:96 -d 2:192",
    "serve": "browser-sync start --proxy http://localhost:3005 --files 'static/dist/css/*.css, static/dist/js/*.js, **/*.html, !node_modules/**/*.html'",
    "build:css": "npm run scss && npm run autoprefixer",
    "build:js": "npm run lint && webpack -p --progress --config webpack.config.js",
    "build:images": "npm run imagemin && npm run icons",
    "watch:images": "onchange 'static/src/images/*.*' -- npm run build:images",
    "watch:css": "onchange 'static/src/scss/*.scss' -- npm run build:css",
    "watch:js": "npm run lint && webpack --progress --config webpack.config.js --colors --watch",
    "watch": "npm run build:images && npm run build:css && npm-run-all -p start serve watch:images watch:css watch:js",
    "build": "npm run build:images && npm run build:css && npm run build:js",
    "start": "node ./index.js"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.1",
    "babel-core": "^6.5.2",
    "babel-eslint": "^5.0.0",
    "babel-loader": "^6.2.3",
    "babel-preset-es2015": "^6.5.0",
    "browser-sync": "^2.11.1",
    "eslint": "^1.10.3",
    "eslint-config-standard": "^4.4.0",
    "eslint-plugin-standard": "^1.3.1",
    "eslint-plugin-babel": "^3.1.0",
    "imagemin-cli": "^2.1.0",
    "node-sass": "^3.4.2",
    "npm-run-all": "^1.5.1",
    "onchange": "^2.0.0",
    "postcss-cli": "^2.4.0",
    "sprity": "^1.0.8",
    "sprity-cli": "^1.0.1",
    "sprity-sass": "^1.0.4",
    "uglify-js": "^2.6.1"
  },
  "dependencies": {
    "compression": "^1.6.1",
    "express": "^4.13.4",
    "photoswipe": "^4.1.1",
    "swig": "^1.4.2"
  }
}
